<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_result_item"
    android:padding="6dp"
    android:layout_margin="4dp">

    <!-- Square Thumbnail - uses aspect ratio trick -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#222222"
        tools:layout_height="150dp">

        <!-- This view enforces square aspect ratio -->
        <View
            android:id="@+id/aspect_ratio_spacer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/view_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@string/view_thumbnail_desc" />

        <!-- 3D/2D mode badge - top left corner -->
        <TextView
            android:id="@+id/view_mode_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_margin="4dp"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:background="#CC000000"
            android:textColor="#FFFFFF"
            android:textSize="9sp"
            android:textStyle="bold"
            tools:text="3D" />

        <!-- Action buttons overlay - bottom right -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:orientation="horizontal"
            android:background="#99000000"
            android:padding="2dp">

            <!-- Rename button -->
            <ImageButton
                android:id="@+id/view_rename_button"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_edit"
                android:contentDescription="@string/rename_view"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:tint="#FFFFFF" />

            <!-- Delete button -->
            <ImageButton
                android:id="@+id/view_delete_button"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_delete"
                android:contentDescription="@string/delete_view"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:tint="#FFFFFF" />

        </LinearLayout>

    </FrameLayout>

    <!-- Compact info below thumbnail -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="6dp"
        android:paddingHorizontal="2dp">

        <!-- Name -->
        <TextView
            android:id="@+id/view_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#EEEEEE"
            android:textSize="12sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Downtown Overview" />

        <!-- Address / subtitle -->
        <TextView
            android:id="@+id/view_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#888888"
            android:textSize="10sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="1dp"
            tools:text="123 Main St, City" />

    </LinearLayout>

</LinearLayout>

